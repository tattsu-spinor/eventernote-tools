{
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "predev": "convex dev --until-success",
    "dev": "concurrently bun:dev:*",
    "dev:frontend": "astro dev",
    "dev:backend": "convex dev",
    "build": "astro build",
    "preview": "wrangler dev",
    "deploy:frontend": "astro build && wrangler deploy",
    "deploy:backend": "convex deploy",
    "biome:check": "biome check",
    "biome:write": "biome check --write",
    "biome:write:unsafe": "biome check --write --unsafe",
    "biome:write:staged": "biome check --write --staged --no-errors-on-unmatched",
    "biome:ci": "biome ci --reporter=github --error-on-warnings"
  },
  "dependencies": {
    "@astrojs/solid-js": "^5.1.0",
    "@astrojs/starlight": "^0.34.4",
    "@astrojs/starlight-tailwind": "^4.0.1",
    "@tailwindcss/vite": "^4.1.10",
    "astro": "^5.10.0",
    "cheerio": "^1.1.0",
    "convex": "^1.24.8",
    "daisyui": "^5.0.43",
    "es-toolkit": "^1.39.3",
    "sharp": "^0.34.2",
    "solid-js": "^1.9.7",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.2",
    "concurrently": "^9.1.2",
    "lefthook": "^1.11.14",
    "wrangler": "^4.20.0"
  }
}
